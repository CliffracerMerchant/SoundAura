<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/pauseState"
        android:state_checked="true"
        android:drawable="@drawable/pause_to_play" />
    <item android:id="@+id/playState"
        android:drawable="@drawable/play_to_pause" />

    <transition
        android:fromId="@id/playState"
        android:toId="@id/pauseState"
        android:drawable="@drawable/play_to_pause" />

    <transition
        android:fromId="@id/pauseState"
        android:toId="@id/playState"
        android:drawable="@drawable/pause_to_play" />
</animated-selector>